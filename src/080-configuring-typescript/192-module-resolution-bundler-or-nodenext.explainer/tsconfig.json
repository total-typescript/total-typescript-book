{
  "compilerOptions": {
    "target": "es2020",
    /**
     * For when you're targeting Node:
     */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    /**
     * For when another bundler is handling module resolution:
     */
    // "module": "ESNext",
    // "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "./dist",
  },
}